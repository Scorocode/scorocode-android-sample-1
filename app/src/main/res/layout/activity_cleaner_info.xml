<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cleaner_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.peterstaranchuk.cleaningservice.activities.CleanerInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivCleanerPhoto"
                android:layout_width="@dimen/cleaner_avatar_size"
                android:layout_height="@dimen/cleaner_avatar_size" />

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/labelStyle"
                    android:text="@string/name" />

                <TextView
                    android:id="@+id/tvCleanerName"
                    style="@style/itemLabelStyle"
                    android:layout_marginTop="8dp" />

                <TextView
                    style="@style/labelStyle"
                    android:layout_marginTop="16dp"
                    android:text="@string/description" />

                <TextView
                    android:id="@+id/tvCleanerDescription"
                    style="@style/itemLabelStyle"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/side_menu"/>

</android.support.v4.widget.DrawerLayout>
