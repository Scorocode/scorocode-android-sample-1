<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cleaner_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.peterstaranchuk.cleaningservice.activities.CleanerInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivCleanerPhoto"
                android:layout_width="@dimen/cleaner_avatar_size"
                android:layout_height="@dimen/cleaner_avatar_size" />

            <TextView
                style="@style/labelStyle"
                android:layout_marginTop="24dp"
                android:text="@string/name" />

            <TextView
                android:id="@+id/tvCleanerName"
                style="@style/itemLabelStyle"
                android:layout_marginTop="8dp" />

            <TextView
                style="@style/labelStyle"
                android:layout_marginTop="16dp"
                android:text="@string/description" />

            <TextView
                android:id="@+id/tvCleanerDescription"
                style="@style/itemLabelStyle"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
